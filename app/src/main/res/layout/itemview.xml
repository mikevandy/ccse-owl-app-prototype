<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <LinearLayout
        android:id="@+id/overallEventSelected"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingTop="1dp">

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:gravity="center"
            android:background="@drawable/ksu_yellow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventDateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/ksuBlack" />

            <TextView
                android:id="@+id/eventDayMonthView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/ksuBlack" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/ksuBlack" />

            <View
                android:layout_width="275dp"
                android:layout_height="1dp"
                android:background="@color/ksuYellow"/>

            <TextView
                android:id="@+id/eventDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/ksuBlack" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="1dp"
            android:paddingTop="15dp">
            <ToggleButton
                android:id="@+id/toggleFavorite"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:textOff=""
                android:textOn=""
                android:background="@drawable/toggle_selector"
                android:text="ToggleButton" />
        </LinearLayout>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>